{* Блок с переключателями опций *}
<div class="product-card__toggles">
    <div class="product-card__toggle-item">
        <input type="checkbox" class="product-card__toggle-input" data-toggle="free-measurement">
        <label class="product-card__toggle-label">
            <span class="product-card__toggle-switch"></span>
            <span class="product-card__toggle-text">Бесплатный замер</span>
        </label>
    </div>
    
    <div class="product-card__toggle-item">
        <input type="checkbox" class="product-card__toggle-input" data-toggle="mounting">
        <label class="product-card__toggle-label">
            <span class="product-card__toggle-switch"></span>
            <span class="product-card__toggle-text">Монтаж</span>
        </label>
    </div>
    
    <div class="product-card__toggle-item product-card__toggle-item--with-hint">
        <input type="checkbox" class="product-card__toggle-input" data-toggle="mounting-systems">
        <label class="product-card__toggle-label">
            <span class="product-card__toggle-switch"></span>
            <span class="product-card__toggle-text-wrapper">
                <span class="product-card__toggle-text">Системы крепления</span>
                <span class="product-card__toggle-hint">
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="8" cy="8" r="7" stroke="#B1B2B3" stroke-width="2"/>
                        <path d="M8 7V11M8 5V5.5" stroke="#B1B2B3" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                    <span class="product-card__toggle-tooltip">Менеджер подберёт необходимый объём комплектующих и предоставит скидку до 6%</span>
                </span>
            </span>
        </label>
    </div>
</div>

